class Solution(object):
    def reverse(self, x):
        """
        :type x: int
        :rtype: int
        """

        if x < 0:
            sign = -1
        else:
            sign = 1

        strg = str(abs(x))
        strgnum = int(strg[::-1])
        if (strgnum > ((1 << 31) - 1)):
            return 0
        else:
            return strgnum * sign
